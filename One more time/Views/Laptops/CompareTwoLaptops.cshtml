@model CompareTwoLaptopsForm
<form method="post" class="form-group">
    <div>
        <label asp-for="SelectedValue1"></label>
        <select asp-for="SelectedValue1" asp-items="(IEnumerable<SelectListItem>)ViewBag.Items"></select>
    </div>

     <div>
        <label asp-for="SelectedValue2"></label>
        <select asp-for="SelectedValue2" asp-items="(IEnumerable<SelectListItem>)ViewBag.Items"></select>
     </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewBag.Value1 != null)
{
    <div class="d-flex p-2">

        <div class="card test" style="width: 18rem;">
            <img src="@ViewBag.Value1.Img" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Value1.Brand.Name</h5>
                <p class="card-text">@ViewBag.Value1.Model</p>
                <p class="card-text">Release year: @ViewBag.Value2.Year</p>
                <p class="card-text">@ViewBag.Value1.Price</p>
            </div>
        </div>


        <div class="card test" style="width: 18rem;">
            <img src="@ViewBag.Value2.Img" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Value2.Brand.Name</h5>
                <p class="card-text">@ViewBag.Value2.Model</p>
                <p class="card-text">Release year: @ViewBag.Value2.Year</p>
                <p class="card-text">@ViewBag.Value2.Price</p>
            </div>
        </div>
    </div>


}
